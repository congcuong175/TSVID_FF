<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".TheSinhVien">
    <androidx.cardview.widget.CardView
        android:layout_width="550dp"
        android:layout_margin="60dp"
        app:cardCornerRadius="30dp"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@color/ic_launcher_background"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/logofooter"
                    android:layout_height="80dp"/>
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:text="Bộ GIÁO DỤC VÀ DÀO TẠO "
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="39dp"
                    android:gravity="center"
                    android:text="TRƯỜNG ĐẠI HỌC SPKT HƯNG YÊN"
                    android:textColor="@color/black"
                    android:textSize="20sp" />
            </RelativeLayout>
           <RelativeLayout
               android:layout_width="match_parent"
               android:background="#FBDE45"
               android:layout_height="match_parent">
               <androidx.cardview.widget.CardView
                   android:layout_width="140dp"
                   android:layout_marginTop="10dp"
                   android:layout_marginLeft="10dp"
                   app:cardCornerRadius="30dp"
                   android:layout_height="160dp">
                   <ImageView
                       android:layout_width="140dp"
                       android:background="@color/black"
                       android:layout_height="160dp"/>
               </androidx.cardview.widget.CardView>

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:gravity="center"
                   android:layout_marginLeft="60dp"
                   android:text="THẺ SINH VIÊN"
                   android:textColor="#D50000"
                   android:textSize="40dp" />

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="170dp"
                   android:layout_marginLeft="10dp"
                   android:layout_marginBottom="184dp"
                   android:orientation="horizontal">

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Mã SV :"
                       android:textColor="@color/black"
                       android:textSize="20dp" />

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="10119096"
                       android:textColor="@color/black"
                       android:textSize="20dp" />
               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:orientation="horizontal"
                   android:layout_marginTop="50dp"
                   android:layout_marginLeft="170dp"
                   android:layout_height="match_parent">
                   <LinearLayout
                       android:layout_width="120dp"
                       android:orientation="vertical"
                       android:layout_marginLeft="10dp"
                       android:layout_height="wrap_content">
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Họ tên :"
                           android:textColor="@color/black"
                           android:textSize="20dp" />

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Ngày sinh :"
                           android:textColor="@color/black"
                           android:textSize="20dp" />
                       <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Ngành học :"
                       android:textColor="@color/black"
                       android:textSize="20dp" />
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Lớp :"
                           android:textColor="@color/black"
                           android:textSize="20dp" />
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="KHóa học :"
                           android:textColor="@color/black"
                           android:textSize="20dp" />



                   </LinearLayout>



                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="vertical">
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginLeft="10dp"
                           android:text="Đỗ Quang Hào"
                           android:textColor="@color/black"
                           android:textSize="20dp" />
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginLeft="10dp"
                           android:text="18/08/2001"
                           android:textColor="@color/black"
                           android:textSize="20dp" />
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginLeft="10dp"
                           android:text="Công Nghệ Thông Tin"
                           android:textColor="@color/black"
                           android:textSize="20dp" />
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginLeft="10dp"
                           android:text="TK 17.5"
                           android:textColor="@color/black"
                           android:textSize="20dp" />
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginLeft="10dp"
                           android:text="2019-2023"
                           android:textColor="@color/black"
                           android:textSize="20dp" />

                   </LinearLayout>

               </LinearLayout>
           </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>